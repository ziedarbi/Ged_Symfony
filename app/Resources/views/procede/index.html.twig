{% extends 'base.html.twig' %}

 
     {% block contentheader %}
         <section class="content-header">
             <h1>
                 Gestion Procede

             </h1>
             <ol class="breadcrumb">
                 <li><a href=""><i class="fa fa-dashboard"></i> Accueil</a></li>
                 <li class="active">Liste des procedes  </li>
             </ol>
         </section>

     {% endblock %}

{% block Maincontent %}
    <section class="invoice">
        <!-- title row -->


        <div class="row">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Liste des procedes  </h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>

                <div class="box-body">
                    <div class="chart">

                        <div class="col-xs-12 table-responsive">
                            <div class="row"> <a    class="btn btn-default" href="{{ path('procede_new') }}"> Ajouter procede</a> </div>
                            <br/>
                            <table  id="tablisteemployes" class="table table-bordered table-hover">

                            <thead>
            <tr>
                <th>Famille </th>
                <th>Methode </th>
                <th>Nomprocede</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for procede in procedes %}
            <tr>
                <td>{{ procede.idmethodedisp.idfamilleInsp }}</td>
                <td>{{ procede.idmethodedisp }}</td>
                <td>{{ procede.nomprocede }}</td>


                <td>


                    <a href="{{ path('procede_show', { 'id': procede.id }) }}"><i class="fa fa-eye primary" aria-hidden="true"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        &nbsp;
                        <a href="{{ path('procede_edit', { 'id': procede.id }) }}"> <i class="fa fa-edit" aria-hidden="true"></i></a>


                    {% endif %}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
    </div>
    </div>
    </div>
    </div>
    </section>

{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            $('#tablisteemployes').DataTable({
                    "pageLength": 10
                }
            )})

    </script>

{% endblock %}